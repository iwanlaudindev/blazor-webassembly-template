<div class="modal fade" id="baseModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered @ModalClass">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body @BodyContentClass">
                @BodyContent
            </div>
            <div class="modal-footer @FooterContentClass">
                @FooterContent
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string ModalClass { get; set; } = string.Empty;
    [Parameter] 
    public string Title { get; set; } = string.Empty;
    [Parameter]
    public RenderFragment? BodyContent { get; set; }
    [Parameter]
    public string BodyContentClass { get; set; } = string.Empty;
    [Parameter]
    public string FooterContentClass { get; set; } = string.Empty;
    [Parameter]
    public RenderFragment? FooterContent { get; set; }
}

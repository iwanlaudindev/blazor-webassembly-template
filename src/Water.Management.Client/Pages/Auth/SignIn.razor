@page "/auth/signin"

@attribute [AllowAnonymous]

<PageTitle>Sign in - Water Management System</PageTitle>

<section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                <div class="d-flex justify-content-center py-4">
                    <a href="#" class="logo d-flex align-items-center w-auto">
                        <img src="./assets/img/logo.png" alt="Komodo Water">
                        <span class="d-none d-lg-block">WMS Admin</span>
                    </a>
                </div><!-- End Logo -->

                <div class="card mb-3">

                    <div class="card-body">

                        <div class="pt-4 pb-2">
                            <h5 class="card-title text-center pb-0 fs-4">Login to Your Account</h5>
                            <p class="text-center small">Enter your username & password to login</p>
                        </div>

                        <EditForm class="row g-3" Model="@Authentication" OnValidSubmit="HandleUserSignin">
                            <DataAnnotationsValidator />
                            <ValidationSummary style="color:indianred" Model="@Authentication" />

                            <div class="col-12">
                                <label for="username" class="form-label">Username<RequiredInput /></label>
                                <InputText id="username" @bind-Value="@Authentication.Username" class="form-control form-control-sm"></InputText>
                                <ValidationMessage For="(() => Authentication.Username)"></ValidationMessage>
                            </div>

                            <div class="col-12">
                                <label for="yourPassword" class="form-label">Password<RequiredInput /></label>
                                <InputText type="password" id="Password" @bind-Value="Authentication.Password" class="form-control form-control-sm"></InputText>
                                <ValidationMessage For="(() => Authentication.Password)"></ValidationMessage>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-sm btn-blue w-100" type="submit" disabled="@isLoadingButton">
                                    @if (isLoadingButton)
                                    {
                                        <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                                        <span role="status">Loading...</span>
                                    }
                                    else
                                    {
                                        <span>Sign in</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



